<% layout('/layouts/boilerplate') %>

<style>
  .profile-data {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .profile-edit-button {
    padding: 0.5rem;
    border: none;
    border-radius: 0.5rem;
    background-color: #1e1e1e;
    color: white;
  }
</style>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1 style="margin: 20px 0 30px 0;">Profile</h1>
    <div class="col-8 offset-2 mb-3 profile-data">
      <img src="<%=user.image%>" alt="<%=user.username%>" style="width: 50%; border-radius: 50%;">
      <h2 style="margin-top: 20px;"><%=user.username%></h2>
      <p><%=user.email%></p>
      <button class="profile-edit-button">Edit Profile</button>
    </div>
  </div>
</div>