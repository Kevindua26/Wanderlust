<% layout('/layouts/boilerplate') %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    margin: 0.5rem 0;
  }

  .filter-scroll {
    display: flex;
    flex-wrap: nowrap;
    margin-right: 1rem;
    width: 70%;
    height: 100px;
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: none;
    position: relative;
  }

  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0.8;
  }

  .filter {
    text-align: center;
    margin: 2rem 2rem 2rem 0;
    opacity: 0.6;

    div i {
      font-size: 1.5rem;
    }

    p {
      font-size: 0.85rem;
    }
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .tax-toggle {
    border: 1px solid #000;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
  }

  .tax-info {
    display: none;
  }
</style>

<div id="filters">
  <div class="filter-scroll">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-hotel"></i></div>
      <p>Hotels</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-earth-americas"></i></div>
      <p>Countries</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Amazing view</p>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-building"></i></div>
      <p>City</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-water"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Island</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-calendar-days"></i></div>
      <p>Check Dates</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-wifi"></i></div>
      <p>Free WIFI</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Swimming Pool</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-utensils"></i></div>
      <p>Dine In</p>
    </div>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listings of allListings) { %>
  <a href="/listings/<%=listings._id%>" class="card-link">
    <div class="card col listing-card">
      <img
        src="<%=listings.image.url %>"
        class="card-img-top"
        alt="<%=listings.title%>"
        style="height: 20rem"
      />
      <div class="card-img-overlay"><%= listings.description %></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listings.title %></b><br />&#8377;
          <%=listings.price.toLocaleString('en-IN') %><i class="tax-info">
            + <% let tax = listings.price * 0.18; %><%=tax%></i>
          / night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<!-- <ul>
  <% for(let listings of allListings) { %>
    <li><a href="/listings/<%=listings._id%>"><%= listings.title %></a></li>
  <% } %>
</ul> -->

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.querySelectorAll(".tax-info");
    if (taxSwitch.checked) {
      taxInfo.forEach((info) => {
        info.style.display = "inline";
      });
    } else {
      taxInfo.forEach((info) => {
        info.style.display = "none";
      });
    }
  });
</script>
